= form_for [bicycle, wheel] do |f|
  -if wheel.errors.any?
    #error_explanation
      %h2= "#{pluralize(wheel.errors.count, "error")} prohibited this wheel from being saved:"
      %ul
        - wheel.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
