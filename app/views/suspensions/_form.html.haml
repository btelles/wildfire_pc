= form_for [bicycle, suspension] do |f|
  -if suspension.errors.any?
    #error_explanation
      %h2= "#{pluralize(suspension.errors.count, "error")} prohibited this suspension from being saved:"
      %ul
        - suspension.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
